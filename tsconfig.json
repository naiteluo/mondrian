{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "*": ["./packages/*/"],
      "mondrian/lib/*": ["./packages/mondrian/src/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": false,
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "compileOnSave": true,
  "include": ["packages"],
  "exclude": ["packages/*/lib", "**/dist/**"]
}
