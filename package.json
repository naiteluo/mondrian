{
  "name": "mondrian-workspace",
  "version": "1.0.0",
  "description": "mondrian",
  "main": "index.js",
  "scripts": {
    "start": "npm run server --workspace=@mondrian/server & npm run build:lib:watch & npm run start --workspace=@mondrian/client",
    "test": "playwright test",
    "test:debug": "playwright test --debug",
    "test:record": "playwright codegen http://localhost:8080",
    "eslint": "eslint --ext ts,tsx .",
    "clean": "rimraf out && npm run clean --workspace=mondrian && npm run clean --workspace=@mondrian/client",
    "api:extractor": "api-extractor run -c ./packages/mondrian/api-extractor.json --local --verbose && api-documenter markdown --input-folder ./temp/mondrian --output-folder ./docs/mondrian",
    "build:types": "rimraf out && tsc -p . --emitDeclarationOnly --outDir out && sh ./utils/extract-types.sh && rimraf out",
    "build:api": "npm run api:extractor && rimraf temp",
    "build:lib": "babel --extensions '.ts' ./packages/mondrian/src --out-dir ./packages/mondrian/lib && sh ./utils/copy-assets.sh",
    "build:lib:watch": "babel --extensions '.ts' ./packages/mondrian/src --out-dir ./packages/mondrian/lib --watch",
    "build:client": "npm run build --workspace=@mondrian/client",
    "build": "npm run build:types && npm run build:lib"
  },
  "author": "naiteluo",
  "license": "ISC",
  "workspaces": [
    "packages/mondrian",
    "packages/mondrian-server",
    "packages/mondrian-client"
  ],
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/plugin-syntax-flow": "^7.16.7",
    "@babel/plugin-transform-typescript": "^7.14.6",
    "@babel/preset-react": "^7.14.5",
    "@microsoft/api-extractor": "^7.19.4",
    "@playwright/test": "^1.17.1",
    "@types/babel__code-frame": "^7.0.3",
    "@types/babel__core": "^7.1.15",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.2",
    "css-loader": "^6.2.0",
    "eslint": "^8.4.1",
    "express": "4",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "node-fetch": "^3.1.0",
    "pixelmatch": "^5.2.1",
    "playwright": "^1.17.1",
    "pngjs": "^6.0.0",
    "rimraf": "^3.0.2",
    "socket.io": "^4.4.0",
    "style-loader": "^3.2.1",
    "ts-loader": "^9.2.5",
    "typescript": "^4.6.0-dev.20220115",
    "webpack": "^5.50.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@types/offscreencanvas": "^2019.6.4"
  }
}
